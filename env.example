# Private key for deployment (NEVER commit real private keys)
PRIVATE_KEY=your_private_key_here

# Public key (address) for the main account
PUBLIC_KEY=your_public_address_here

# Infura API key for Ethereum networks
INFURA_API_KEY=your_infura_api_key_here

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Deployed contract address (filled automatically after deployment)
TOKEN_ADDRESS=

# Gas configuration (optional - leave empty for automatic gas management)
GAS_PRICE=10               # Gas price in gwei (legacy transactions)
GAS_LIMIT=500000           # Gas limit per transaction
MAX_FEE_PER_GAS=10         # Max fee per gas in gwei (EIP-1559)
MAX_PRIORITY_FEE_PER_GAS=2 # Priority fee in gwei (EIP-1559)

# Gas reporting for tests (optional)
REPORT_GAS=true
